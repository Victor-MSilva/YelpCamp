<%- include("../partials/header")%> 

<div class="container">
    <header class="jumbotron">
    <div class="container">
    <h1>Welcome to YelpCamp</h1> 
    <p>View our hand-picked campgrounds from all over the world</p>
    <p><a class="btn btn-primary btn-md" href="/campgrounds/new">Add New Campgrounds</a></p>
    </div>
    </header>

    <div class="row">
            <div class="col-lg-12">
                <h3>Our Most Popular Campgrounds</h3>
            </div>
        <% campgrounds.forEach(function(campground)  { %>
            <div class="col-sm-6 col-md-3 my-2">
                <div class="card">
                  <img src="<%= campground.image %>" class="card-img-top">
                  <div class="card-body">
                    <h5 class="card-title text-center"><%= campground.name %></h5>
                    <div>
                        <p>
                            <a href="/campgrounds/<%= campground._id %>"  class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                  </div>
                </div>
              </div>
        <% }); %>
    </div>
</div>
<%- include("../partials/footer")%> 